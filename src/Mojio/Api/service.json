{
    "name": "Mojio",
    "apiVersion": "2013-07-03",
    "description": "Mojio API",
    "operations": {
        "getEntity": {
        	"httpMethod": "GET",
            "uri": "{type}/{id}/{action}",
            "summary": "Get a specific entity",
            "parameters": {
            	"type": {
            		"location": "uri",
            		"type": "string",
            		"enum": [
            			"mojios","users","trips","events",""
            		],
            		"required": true
            	},
                "id": {
                    "location": "uri",
                    "description": "Token ID",
                    "required": true
                },
            	"action": {
            		"location": "uri",
            		"type": "string"
            	}
            }
        },
        "getToken": {
        	"extends": "getEntity",
            "parameters": {
                "type": {
                    "location": "uri",
                    "default": "login",
                    "required": true
                }
            }
        },
        "getUser": {
        	"extends": "getEntity",
            "parameters": {
                "type": {
                    "location": "uri",
                    "default": "users",
                    "required": true
                }
            }
        },
        "getMojio": {
        	"extends": "getEntity",
            "parameters": {
                "type": {
                    "location": "uri",
                    "default": "mojios",
                    "required": true
                }
            }
        },
        "getDevice": {
        	"extends": "getMojio"
        },
        "getOrder": {
        	"extends": "getEntity",
            "parameters": {
                "type": {
                    "location": "uri",
                    "default": "orders",
                    "required": true
                }
            }
        },
        "getInvoice": {
        	"extends": "getOrder"
        },
        "getTrip": {
        	"extends": "getEntity",
            "parameters": {
                "type": {
                    "location": "uri",
                    "default": "trips",
                    "required": true
                }
            }
        },
        "getEvent": {
        	"extends": "getEntity",
            "parameters": {
                "type": {
                    "location": "uri",
                    "default": "events",
                    "required": true
                }
            }
        },
        "getStored": {
        	"extends": "getEntity",
        	"httpMethod": "GET",
            "uri": "{type}/{id}/{action}/{key}",
            "class": "\\Mojio\\Api\\Command\\GetStored",
            "parameters": {
                "action": {
                    "location": "uri",
                    "default": "store",
                    "required": true
                },
                "key": {
                	"location": "uri",
                	"type": "string",
                	"required": true
                }
            }
        },
        "setStored": {
        	"extends": "getStore",
            "class": "\\Mojio\\Api\\Command\\SetStored",
        	"httpMethod": "PUT",
            "parameters": {
                "value": {
                	"type": "string",
                	"required": "true",
                	"location": "json"
                }
            }
        },
    	"begin": {
    		"httpMethod": "GET",
            "summary": "Gets a list of users",
            "uri": "{type}/{appId}/begin",
            "class": "\\Mojio\\Api\\Command\\GetEntity",
            "parameters": {
            	"type": {
            		"location": "uri",
            		"type": "string",
            		"default": "login"
            	},
            	"appId": {
            		"location": "uri",
            		"type": "string",
            		"required": true
            	},
            	"secretKey": {
            		"location": "query",
            		"type": "string",
            		"required": true
           		},
            	"userOrEmail": {
            		"location": "query",
            		"type": "string"
           		},
            	"password": {
            		"location": "query",
            		"type": "string"
           		},
           		"minutes": {
            		"location": "query",
            		"type": "integer",
            		"default": 10
           		}
            }
    	},
        "login": {
        	"httpMethod": "GET",
        	"uri": "{type}/{username}/setuser",
        	"summary": "Lookup a token",
            "class": "\\Mojio\\Api\\Command\\GetEntity",
            "parameters": {
            	"type": {
            		"type": "string",
            		"location": "uri",
            		"default": "login"
            	},
            	"username": {
            		"location": "uri",
            		"type": "string",
            		"required": true
            	},
            	"password": {
            		"location": "query",
            		"type": "string",
            		"required": true
            	}
            }
        },
        "saveEntity": {
        	"httpMethod": "PUT",
            "uri": "{type}/{id}/{action}",
            "summary": "Update a new entity",
            "class": "\\Mojio\\Api\\Command\\SaveEntity",
            "parameters": {
            	"type": {
            		"location": "uri",
            		"type": "string",
            		"enum": [
            			"mojios","users","trips","events",""
            		],
            		"required": true
            	},
                "id": {
                    "location": "uri",
                    "description": "Token ID",
                    "required": true
                }
            }
        },
        "newEntity": {
        	"httpMethod": "POST",
            "uri": "{type}/{id}/{action}",
            "summary": "Create and save a new entity",
            "class": "\\Mojio\\Api\\Command\\SaveEntity",
            "parameters": {
            	"type": {
            		"location": "uri",
            		"type": "string",
            		"enum": [
            			"mojios","users","trips","events",""
            		],
            		"required": true
            	},
                "id": {
                    "location": "uri",
                    "description": "Optional ID"
                },
                "action": {
                	"location": "uri",
                	"description": "Optional Action"
                }
            }
        },
        "getList": {
        	"httpMethod": "GET",
            "uri": "{type}/{id}/{action}",
            "summary": "Gets a list of entities",
            "class": "\\Mojio\\Api\\Command\\GetList",
            "parameters": {
            	"type": {
            		"location": "uri",
            		"type": "string",
            		"enum": [
            			"mojios","users","trips","events",""
            		],
            		"required": true
            	},
                "id": {
                    "location": "uri",
                    "description": "Token ID",
                    "required": false
                },
            	"action": {
            		"location": "uri",
            		"type": "string",
            		"required": false
            	},
            	"page": {
            		"location": "query",
            		"type": "integer",
            		"default": 1
           		},
           		"pageSize": {
            		"location": "query",
            		"type": "integer",
            		"default": 10
           		},
           		"sortBy": {
            		"location": "query",
            		"type": "string"
           		},
           		"desc": {
           			"location": "query",
           			"type": "boolean"
           		}
            }
        },
        "getUsers": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "users",
                    "required": true
                }
            }
        },
        "getTrips": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "trips",
                    "required": true
                }
            }
        },
        "getOrders": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "orders",
                    "required": true
                }
            }
        },
        "getInvoices": {
        	"extends": "getOrders"
        },
        "getMojios": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "mojios",
                    "required": true
                }
            }
        },
        "getDevices": {
        	"extends": "getMojios"
        },
        "getProducts": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "products",
                    "required": true
                }
            }
        },
        "getEvents": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "events",
                    "required": true
                }
            }
        },
        "getApps": {
        	"extends": "getList",
        	"parameters": {
                "type": {
                    "location": "uri",
                    "default": "apps",
                    "required": true
                }
            }
        },
        "deleteEntity": {
            "httpMethod": "DELETE",
            "uri": "{type}/{id}/{action}",
            "summary": "Deletes an entity",
            "class": "\\Mojio\\Api\\Command\\DeleteEntity",
            "parameters": {
                "type": {
            		"location": "uri",
            		"type": "string",
            		"enum": [
            			"mojios","users","trips","events",""
            		],
            		"required": true
            	},
                "id": {
                    "location": "uri",
                    "description": "Token ID",
                    "required": false
                },
            	"action": {
            		"location": "uri",
            		"type": "string",
            		"required": false
            	}
            }
        }
    }
}